@{
  Layout = "_Layout";
}

@using University.Models;
@model List<University.Models.Class>;

<h1>Classes</h1>

@if (@Model.Count == 0)
{
  <h3>No Classes have been added yet!</h3>
} 

@foreach (Class class in Model)
{
  <li>@Html.ActionLink($"{class.Name}", "Details", new { id = class.ClassId })</li>
}

<p>@Html.ActionLink("Add new class", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>